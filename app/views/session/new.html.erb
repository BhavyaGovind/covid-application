
<div id="container">
  <div class="aside_login">

  </div>
  <div class="signup">
    <br>

    <h1>Login</h1>
    <% if flash[:error_message] %>

      <%= flash[:error_message] %>
    <% end %>

    <%= form_tag login_path do %>
      <%= label_tag :email %>
      <br>
      <%= email_field_tag :email %>
      <br>
      <%= label_tag :password %>
      <br>
      <%= password_field_tag :password %>
      <br>
      <%= submit_tag "Sign In" %>
    <% end %>
    <br>
    <p> Don't have an account<%= link_to 'Signup here', new_user_path, :class => "link" %></p>
  </div>


</div>
